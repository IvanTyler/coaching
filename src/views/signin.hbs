<form action="/auth/signin" method="POST" class="form-signin">
  <h2>Авторизация</h2><br>
  <div class="mb-3">
    <label for="formGroupExampleInput2" class="form-label">Ваш email</label>
    <input name="email" type="email" class="form-control" id="formGroupExampleInput2" required>
  </div>
  <div class="mb-3">
    <label for="formGroupExampleInput3" class="form-label">Пароль</label>
    <input name="password" type="password" class="form-control" id="formGroupExampleInput3" required>
    {{#if wrongPass}}
    <p>{{wrongPass}}</p>
    {{/if}}
  </div>
  <div class="col-12">
    <button type="submit" class="btn btn-primary">Авторизоваться</button>
  </div>
</form>
