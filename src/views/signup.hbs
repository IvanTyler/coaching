<form action="/auth/signup" method="POST">
  <h2>Регистрация</h2><br>
<div class="mb-3">
  <label for="firstName" class="form-label">Имя пользователя</label>
  <input name="firstName" type="text" class="form-control" id="firstName" required>
</div>
<div class="mb-3">
  <div class="mb-3">
  <label for="lastName" class="form-label">Фамилия пользователя</label>
  <input name="lastName" type="text" class="form-control" id="lastName" required>
</div>
  <label for="formGroupExampleInput2" class="form-label">Ваш email</label>
  <input name="email" type="email" class="form-control" id="formGroupExampleInput2" required>
</div>
<div class="mb-3">
  <label for="formGroupExampleInput3" class="form-label">Пароль</label>
  <input name="password" type="password" class="form-control" id="formGroupExampleInput3" required>
  {{#if wrongData}}
  <p>{{wrongData}}</p>
  {{/if}}
</div>
<div class="col-12">
  <button type="submit" class="btn btn-primary">Submit</button>
</div>
</form>

